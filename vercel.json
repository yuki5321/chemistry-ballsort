{
  "version": 2,
  "builds": [
    {
      "src": "client/index.html",
      "use": "@vercel/static"
    },
    {
      "src": "server/simple.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["shared/**", "dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/simple.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/server/simple.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
